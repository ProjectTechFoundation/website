---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'TikTok', href: 'https://www.tiktok.com/@projecttechorg', icon: 'fa-brands fa-tiktok' },
  { name: 'Twitter', href: 'https://twitter.com/projecttechorg', icon: 'fa-brands fa-x-twitter' },
  { name: 'Instagram', href: 'https://www.instagram.com/projecttechorg', icon: 'fa-brands fa-instagram' },
  { name: 'Discord', href: 'https://discord.com/invite/AFFYnNVXpZ', icon: 'fa-brands fa-discord' },
  { name: 'GitHub', href: 'https://github.com/projecttechfoundation', icon: 'fa-brands fa-github' },
  { name: 'Email', href: 'mailto:contact@project-tech.org', icon: 'fa-regular fa-envelope' }
];

const legalLinks = [
  { name: 'Terms of Service', href: '/legal/tos' },
  { name: 'Privacy Policy', href: '/legal/privacy' }
];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="col-span-1 md:col-span-2">
        <h2 class="text-2xl font-bold">Project Tech</h2>
        <p class="mt-2 text-gray-300">Bridging the Digital Divide for a Connected Tomorrow.</p>
        <div class="mt-4 flex space-x-4">
          {socialLinks.map(link => (
            <a 
              href={link.href}
              class="text-gray-300 hover:text-white text-xl transition-colors duration-200"
              aria-label={link.name}
              target="_blank" 
              rel="noopener noreferrer"
            >
              <i class={link.icon}></i>
            </a>
          ))}
        </div>
      </div>
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider">Quick Links</h3>
        <ul class="mt-4 space-y-2">
          <li><a href="/about" class="text-gray-300 hover:text-white">About Us</a></li>
          <li><a href="/programs" class="text-gray-300 hover:text-white">Programs</a></li>
          <li><a href="/get-involved" class="text-gray-300 hover:text-white">Get Involved</a></li>
          <!-- <li><a href="/events" class="text-gray-300 hover:text-white">Events</a></li> -->
          <li><a href="/contact" class="text-gray-300 hover:text-white">Contact</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider">Legal</h3>
        <ul class="mt-4 space-y-2">
          {legalLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-700">
      <p class="text-gray-400 text-sm text-center">
        Â© {currentYear} Project Tech Foundation Inc. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>
---
import Swiper from "swiper/bundle";
import "swiper/css/bundle";

const stats = [
  { label: "Students Taught", value: "20+" },
  { label: "Hours Volunteered", value: "50+" },
  { label: "Workshops Held", value: "7+" },
  { label: "Communities Served", value: "3+" },
];

const images = [
  { src: "/images/impact/1.jpg", alt: "Senior learning how to use her laptop" },
  { src: "/images/impact/2.jpg", alt: "Senior learning how to use her laptop" },
  { src: "/images/impact/3.jpg", alt: "Senior setting up her email account" },
  { src: "/images/impact/4.jpg", alt: "Senior learning how to use her iPad" },
  { src: "/images/impact/5.jpg", alt: "Senior who learned how to use contacts on his phone" },
];
---

<section class="py-20 bg-white relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 z-0">
    <div class="absolute top-0 right-0 w-96 h-96 bg-blue-50 rounded-full mix-blend-multiply filter blur-3xl opacity-70 transform -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-50 rounded-full mix-blend-multiply filter blur-3xl opacity-70 transform translate-y-1/2 -translate-x-1/2"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Our Impact
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Making a difference in communities across the United States
      </p>
    </div>

    <!-- Impact Stats -->
    <div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-4">
      <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="text-5xl font-extrabold text-blue-600 mb-4">90+</div>
        <div class="text-lg font-medium text-gray-600">Students Taught</div>
      </div>
      <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="text-5xl font-extrabold text-purple-600 mb-4">3</div>
        <div class="text-lg font-medium text-gray-600">Active Chapters</div>
      </div>
      <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="text-5xl font-extrabold text-pink-600 mb-4">400+</div>
        <div class="text-lg font-medium text-gray-600">Hours of Education</div>
      </div>
      <div class="bg-white rounded-2xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="text-5xl font-extrabold text-blue-600 mb-4">5+</div>
        <div class="text-lg font-medium text-gray-600">Volunteers</div>
      </div>
    </div>
  </div>
</section>

<style>
  .transform {
    transition: transform 0.3s ease-in-out;
  }
  .transform:hover {
    transform: translateY(-5px);
  }
</style>

<script>
  import Swiper from "swiper/bundle";

  document.addEventListener("DOMContentLoaded", () => {
    new Swiper(".swiper-container", {
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      autoplay: {
        delay: 5000,
      },
    });
  });
</script>

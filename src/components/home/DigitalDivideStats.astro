---
interface Stat {
  value: string;
  label: string;
  source: string;
  sourceUrl: string;
}

const stat: Stat = {
  value: "42%",
  label: "of public schools in the U.S. do not offer computer science courses.",
  source: "Computer Science Teachers Association, 2022",
  sourceUrl: "https://code.org/assets/advocacy/stateofcs/2022_state_of_cs.pdf"
};
---

<div class="bg-white/90 backdrop-blur-sm rounded-lg p-8 shadow-xl">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Digital Divide</h2>
  <div>
    <span class="text-5xl font-bold text-blue-600">{stat.value}</span>
    <p class="mt-3 text-lg text-gray-700">{stat.label}</p>
    <a 
      href={stat.sourceUrl}
      target="_blank"
      rel="noopener noreferrer" 
      class="mt-2 inline-block text-sm text-gray-500 hover:text-blue-600"
    >
      Source: {stat.source}
    </a>
  </div>
</div>
const programs = [
  {
    title: 'Coding Classes',
    description: 'Learn programming fundamentals through hands-on projects.',
    icon: '\u{1F4BB}' // üíª
  },
  {
    title: 'Tech Literacy',
    description: 'Essential digital skills for everyday life.',

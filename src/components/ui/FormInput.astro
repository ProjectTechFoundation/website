---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'password';
  label: string;
  required?: boolean;
}

const { id, name, type = 'text', label, required = false } = Astro.props;
---

<div class="relative">
  <input 
    type={type}
    id={id}
    name={name}
    required={required}
    placeholder=" "
    class="block px-2.5 pb-2.5 pt-4 w-full text-gray-900 bg-transparent rounded-lg border border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
  />
  <label 
    for={id}
    class="absolute text-gray-500 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-white px-2 peer-focus:px-2 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:-translate-y-4 peer-focus:scale-75 peer-focus:text-blue-600 left-1"
  >
    {label}
  </label>
</div>